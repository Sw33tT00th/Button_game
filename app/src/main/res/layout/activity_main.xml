<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.button_game.MainActivity"
    android:screenOrientation="portrait"
    android:gravity="center_horizontal">

    <GridLayout
        android:layout_width="275dp"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        android:id="@+id/Main_Grid">

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2" />
        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button15"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button16"
            android:layout_row="5"
            android:layout_column="0" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button17"
            android:layout_row="5"
            android:layout_column="1" />

        <Button
            android:text="Press Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:layout_row="5"
            android:layout_column="2" />
    </GridLayout>

    <TextView
        android:text="Last Time: 0s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Main_Grid"
        android:layout_alignStart="@+id/Main_Grid"
        android:layout_marginBottom="43dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="Fastest Time: 0s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/Main_Grid"
        android:layout_alignEnd="@+id/Main_Grid"
        android:id="@+id/textView3" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ResetButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Press All the Buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ResetButton"
        android:layout_toEndOf="@+id/ResetButton" />

    <Chronometer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textScaleX="1"
        android:textStyle="bold"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

</RelativeLayout>
